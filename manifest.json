{
  "name": "ExLogger",
  "version": "2.0",
  "description": "ExLogger for Chrome extension",

  "manifest_version": 2,
  "permissions": ["tabs", "webRequest", "webRequestBlocking", "<all_urls>"],

  "icons": {
    "16": "./icon/icon.jpg",
    "32": "./icon/icon.jpg",
    "48": "./icon/icon.jpg",
    "128": "./icon/icon.jpg"
  },
  "background": {
    "scripts": ["./js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./js/content.js"],
      "run_at": "document_start"
    }
  ]
}